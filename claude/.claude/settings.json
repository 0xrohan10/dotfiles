{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "plan"
  },
  "model": "opus[1m]",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bun format $FILE"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I {} terminal-notifier -title 'Claude Code' -message '{}' -sound default -contentImage ~/.local/share/icons/claude.png -ignoreDnD -activate com.mitchellh.ghostty"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Task finished' -sound Glass -contentImage ~/.local/share/icons/claude.png -ignoreDnD -activate com.mitchellh.ghostty"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "code-review@claude-plugins-official": true
  },
  "skipDangerousModePermissionPrompt": true,
  "preferredShell": "/opt/homebrew/bin/nu",
  "feedbackSurveyState": {
    "lastShownTime": 1754078964344
  },
  "effortLevel": "medium"
}
